<div class="container-fluid py-3 z-depth-1 div-modal-default">
  <div class="form-row pull-right">
    <kbd class="green-default"><small>Data do pedido: 10/10/2018</small></kbd>
  </div>

  <div class="form-row mb-1">
    <strong class="text-left pr-2">Solicitante: </strong>
    <%= @pedido.nome %>
  </div>

  <div class="form-row mb-1">
    <strong class="text-left pr-2">Matrícula: </strong>
    <%= @pedido.matricula %>
  </div>

  <div class="form-row mb-1">
    <strong class="text-left pr-2">Pasta: </strong>
    <%= @pedido.pasta %>
  </div>

  <div class="form-row mb-1">
    <strong class="text-left pr-2">Curso:</strong>
    <%= @pedido.curso.descricao %>
  </div>

  <div class="form-row mb-1">
    <strong class="text-left pr-2">Finalidade do pedido:</strong>
    <%= @pedido.finalidadePedido %>
  </div>

  <div class="form-row mb-1">
    <strong class="text-left pr-2">Contatos:</strong>
    <%= @pedido.telefone %> | <%= @pedido.celular %>
  </div>
</div>

<div class="py-3 z-depth-1 div-modal-default green-default mt-3">
  <strong class="col-md-3 text-left py-1">Situação:</strong>
  <%= @pedido.situacao.descricao %>
</div>

<div class="text-center py-2">
  <%= link_to 'Atualizar situação', pedido_atestados_path, class: "btn btn-sm btn-primary" %>
</div>
